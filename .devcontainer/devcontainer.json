			"settings": { 
				"terminal.integrated.defaultProfile.linux": "pwsh",
				"powershell.codeFormatting.autoCorrectAliases": true
			},
			
			"extensions": [
				"ms-vscode.powershell",
				"GitHub.copilot",
				"vscode-icons-team.vscode-icons",
				"ms-azuretools.vscode-bicep"
			]
		}
	}
}